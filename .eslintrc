{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true,
            "classes": true,
            "jsx": true
        }
    },
    "extends": [
        "react-app",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": "error",
        "comma-dangle": [
            "warn",
            "never"
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            2,
            "double"
        ],
        "no-unused-expressions": "warn",
        "no-useless-concat": "warn",
        "block-scoped-var": "error",
        "consistent-return": "error",
        "no-mixed-operators": "off",
        "function-paren-newline": [
            "error",
            "consistent"
        ],
        "one-var": [
            "warn",
            "always"
        ]
    }
}
